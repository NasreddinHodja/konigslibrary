{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "konigslibrary",
  "version": "0.1.0",
  "identifier": "com.konigslibrary.reader",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "TAURI_BUILD=1 pnpm build && rm -rf build/download"
  },
  "app": {
    "windows": [
      {
        "title": "konigslibrary",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "requireLiteralLeadingDot": false,
          "allow": ["$HOME/**"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
